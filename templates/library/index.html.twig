{% extends 'base.html.twig' %}

{% block title %}Hello LibraryController!{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
    .button {
        padding: 10px 20px;
        background-color: #28a745;
        color: #fff;
        border: none;
        border-radius: 5px;
        cursor: pointer;
        transition: background-color 0.3s ease;
    }
</style>

<div class="example-wrapper">
    <h1>Library</h1>
    <p>View all books in the library or add a new entry.</p>
    <ul>
        <a class="button" href="{{ path('view_library') }}">Show all books</a>
        <a class="button" href="{{ path('library_create') }}">Add a new book</a>
    </ul>
    </ul>
</div>
{% endblock %}
