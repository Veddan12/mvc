{% extends 'base.html.twig' %}

{% block title %}Hello LibraryController!{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
    .library-table {
        width: 90%;
        margin: 1em auto;
        font-size: 1.2rem;
    }
    .library-table th, .library-table td {
        border: 1px solid #ddd;
        padding: 8px;
        vertical-align: middle;
        text-align: left;
    }
    .library-table img {
        max-height: 150px;
        display: block;
        margin: 0 auto;
    }
</style>
<div class="library-list">
    {% if library is not empty %}
    <table class="library-table">
        <thead>
            <tr>
                <th>Title</th>
                <th>Author</th>
                <th>ISBN</th>
                <th>Cover</th>
            </tr>
        </thead>
        <tbody>
            {% for book in library %}
                <tr>
                    <td>
                        <a href="{{ path('book_by_id', {'id': book.id}) }}">
                            {{ book.title }}
                        </a>
                    </td>
                    <td>{{ book.author }}</td>
                    <td>{{ book.isbn }}</td>
                    <td><img src="{{ asset(book.bookcover) }}" alt="Cover of {{ book.title }}" style="max-height: 150px;"></td>
                </tr>
            {% endfor %}
        </tbody>
    </table>
    {% else %}
        <p>No books found.</p>
    {% endif %}
</div>
<div>
    <ul>
        <a href="{{ path('library_create') }}">Add a new book</a>
    <ul>
</div>
{% endblock %}
