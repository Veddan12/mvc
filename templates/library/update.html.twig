{% extends 'base.html.twig' %}

{% block title %}{% endblock %}

{% block body %}
<h1>Edit Book info</h1>

<form method="post" action="{{ path('book_update_by_id', { id: book.id }) }}">
    <label for="title">Title:</label>
    <input type="text" id="title" name="title" value="{{ book.title }}" required><br><br>

    <label for="author">Author:</label>
    <input type="text" id="author" name="author" value="{{ book.author }}" required><br><br>

    <label for="isbn">ISBN:</label>
    <input type="text" id="isbn" name="isbn" value="{{ book.isbn }}" required><br><br>

    <label for="bookcover">Book Cover URL:</label>
    <input type="text" id="bookcover" name="bookcover" value="{{ book.bookcover }}"><br><br>

    <button type="submit">Save</button>
</form>

<div>
    <ul>
        <a href="{{ path('view_library') }}">Back to Library</a>
    <ul>
</div>
{% endblock %}
