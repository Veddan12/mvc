{# templates/lucky.html.twig #}

{% extends "base.html.twig" %}

{% block title %}Magic number{% endblock %}

{% block body %}
    <div class="title">
        <h1>Lucky</h1>   
    </div>
    <h2>Magic number</h2>
    <p>Welcome to my awesome magical homepage.</p>
    <p>This is the current magic number: <span class="magic-number" onclick="showSurprise()">{{ number }}</span></p>
    <p>Click on the number above to see something cool!</p>

    {# Click on number surprise element #}
    <div id="surprise" style="display: none;">
        <iframe src="https://giphy.com/embed/fmMdxlVwsCmTtA4V6a" width="480" height="360" frameborder="0" class="giphy-embed" allowfullscreen></iframe>
        <p><a href="https://giphy.com/gifs/anime-jump-skate-fmMdxlVwsCmTtA4V6a">via GIPHY</a></p>
    </div>

    <script>
        function showSurprise() {
            var surpriseElement = document.getElementById('surprise');
            surpriseElement.style.display = 'block';
        }
    </script>
{% endblock %}
